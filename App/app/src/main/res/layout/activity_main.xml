<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:src="@drawable/search"
        android:layout_marginTop="72dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/iv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:text="My Login"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/iv_logo"
        android:layout_centerInParent="true"

        />



            <ImageView
                android:layout_width="32dp"
                android:id="@+id/icon_user"
                android:layout_height="32dp"
                android:src="@drawable/avatar"
                android:layout_below="@id/iv_title"
                android:layout_toLeftOf="@+id/text_user"
                />
        <EditText
            android:layout_width="200dp"
            android:id="@+id/text_user"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_title"
            android:hint="Username"/>

        <ImageView
            android:layout_width="32dp"
            android:id="@+id/icon_pass"
            android:layout_height="32dp"
            android:src="@drawable/key"
            android:layout_below="@+id/text_user"
            android:layout_toLeftOf="@+id/text_pass"
            />
        <EditText
            android:layout_width="200dp"
            android:id="@+id/text_pass"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_user"
            android:layout_centerInParent="true"
            android:hint="password"/>
    <Button
        android:id="@+id/iv_button"
        android:layout_centerInParent="true"
        android:layout_below="@id/text_pass"
        android:layout_marginTop="32dp"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:text="Login"/>
    <Spinner
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/iv_button"
        android:id="@+id/spinner"></Spinner>
</RelativeLayout>